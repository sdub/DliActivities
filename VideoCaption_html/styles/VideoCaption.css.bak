	height: 400px;
	opacity: 0.3;
	position: absolute;
	top: 0;
	width: 580px;
}

#langSelect {
	background-color: #F5F5F5;
    font-size: 11px;
    left: 674px;
    padding: 4px;
    position: absolute;
    top: 45px;
}

.hidden {
	display: none;
}

#closeCaptionImg {
	padding: 2px
}

#caption_language {
	float: right;
	padding: 7px;
