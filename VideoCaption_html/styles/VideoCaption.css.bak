html body {
    background-color: #F5F5F5;
    color: #444444;
    font-family: Arial,Helvetica,sans-serif;
    letter-spacing: 2px;
    line-height: 20px;
    position: absolute;
}

.activity_description {
    display: block;
    font-family: inherit;
    font-size: 12px;
    letter-spacing: 2px;
    margin-bottom: 20px;
    margin-left: 26px;
    margin-top: -19px;
    max-width: 910px;
}

.activity_hd {
    color: grey;
    display: block;
    font-family: inherit;
    font-size: 22px;
    margin-left: 26px;
    margin-top: -2px;
}

.roundCorners {
	border-radius: 3px;
}

.invisible{
	opacity: .3;
}

.visible{
	opacity: .7;
}

#main {
	position: relative;
	height: 400px;
	width: 720px;
	left: 25px;
}

#selectable .ui-selecting {
	background: #FECA40;
}
#selectable .ui-selected {
	background: lightgray;
}
#selectable {
	list-style-type: none;
	margin: 0;
	padding: 0;
	width: 100%;
}
#selectable li {
	cursor: pointer;
	border: 0px;
	margin: 0px;
	padding: 1em;
	font-size: 1em;
	height: 18px;
}

